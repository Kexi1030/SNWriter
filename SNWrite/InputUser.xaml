<Window x:Class="SNWrite.InputUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SNWrite"
        mc:Ignorable="d"
        Title="InputUser" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="请输入操作人姓名:" FontSize="20" Grid.Row="0" HorizontalAlignment="Left" Margin="5"/>
        <TextBox x:Name="NameInputBox" FontSize="22" Margin="5" Grid.Row="1" TextChanged="NameInputBox_TextChanged"/>
        <Button x:Name="DefineOperatorButton" Content="确定" FontSize="20" Width="100" Grid.Row="2" HorizontalAlignment="Right" IsEnabled="False" Margin="5" IsDefault="True" Click="DefineOperator_Click" />
    </Grid>
</Window>
